{
    "version": "0.2.0",
    "configurations": [

        {
            "name": "Hachoir-metadata",
            "type": "python",
            "request": "launch",
            "stopOnEntry": false,
            "pythonPath": "${config.python.pythonPath}",
            "program": "hachoir-metadata",
            "cwd": "${workspaceRoot}",
            "debugOptions": [
                "WaitOnAbnormalExit",
                "WaitOnNormalExit",
                "RedirectOutput"
            ],
            "args": [
                "/Users/fernando/Desktop/Mover para Storage/Apresentação Maia - Dia das mães - ESA/00014.MTS",
                "--verbose"
            ]
        },
        {
            "name": "Hachoir-urwid",
            "type": "python",
            "request": "launch",
            "stopOnEntry": false,
            "pythonPath": "${config.python.pythonPath}",
            "program": "hachoir-urwid",
            "cwd": "${workspaceRoot}",
            "console": "integratedTerminal",
            "debugOptions": [
                "WaitOnAbnormalExit",
                "WaitOnNormalExit",
                "RedirectOutput"
            ],
            "args": [
                "/Users/fernando/Desktop/Mover para Storage/Apresentação Maia - Dia das mães - ESA/00014.MTS",
                "--verbose"
            ]
        },
        {
            "name": "Attach (Remote Debug)",
            "type": "python",
            "request": "attach",
            "localRoot": "${workspaceRoot}",
            "remoteRoot": "${workspaceRoot}",
            "port": 3000,
            "secret": "my_secret",
            "host": "localhost"
        }
    ]
}